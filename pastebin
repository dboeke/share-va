begin;
set local search_path to console, public;

select data->'value', setting_id, create_timestamp, update_timestamp, delete_timestamp from policy_values where id = 246789668744069;

select policy_hierarchy_id, policy_setting_id, create_timestamp, update_timestamp, delete_timestamp from policy_hierarchy_settings where id = (select setting_id from policy_values where id = 246789668744069);

select resource_id, path, resource_group_id, create_timestamp, update_timestamp, delete_timestamp from policy_hierarchy where id = (select policy_hierarchy_id from policy_hierarchy_settings where id = (select setting_id from policy_values where id = 246789668744069));

select policy_hierarchy_id, policy_setting_id, create_timestamp, update_timestamp, delete_timestamp from policy_hierarchy_settings_history where id = (select setting_id from policy_values where id = 246789668744069);

select resource_id, policy_type_id, create_timestamp, update_timestamp, delete_timestamp from policy_settings_history where id = (select setting_id from policy_values where id = 246789668744069);

end;

